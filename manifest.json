{
  "manifest_version": 3,
  "name": "Instagram Downloader",
  "version": "1.2",
  "permissions": [
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
